@model IEnumerable<SearchResultCustomerDTO.CustomerDTO>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(item => item.Name)
                </th>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(item => item.LastName)
                </th>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(item => item.Address)
                </th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Acciones</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="px-6 py-4">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="px-6 py-4">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td class="px-6 py-4 text-right">
                        <div class="flex space-x-2">
                            <!-- Modificar - Botón verde -->
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Modificar</a>

                            <!-- Ver - Botón amarillo -->
                            <a href="@Url.Action("Details", new { id = item.Id })" class="text-white bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-4 focus:ring-yellow-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:focus:ring-yellow-900">Ver</a>
                            <!-- Eliminar - Botón Rojo -->
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Eliminar</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
